<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeaponActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/nav_bg"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back_weapon"
            android:layout_width="48dp"
            android:layout_height="48dp"

            android:background="@drawable/home_btn_back_pressed"
            android:text="" />

        <TextView
            android:layout_width="261dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Weapon"
            android:textSize="30sp" />

        <Button
            android:id="@+id/weapon_search"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/home_btn_search_pressed"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="554dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/weapon_recycler"
                android:layout_width="match_parent"
                android:layout_height="572dp">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent">

            <com.example.lilingyun.zuoye_ui.LetterView
                android:id="@+id/MainActivity_LetterView"
                android:layout_width="match_parent"
                android:layout_height="595dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:dWidth="20dp"
                app:defaultTextColor="@android:color/black"
                app:selectColor="@android:color/holo_red_dark"
                app:textSpace="10dp" />


        </LinearLayout>



    </LinearLayout>

</LinearLayout>